<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <% if micropost.category %>
    <% if micropost.category.icon %>
      <span class="icon"><i class="fa fa-<%=micropost.category.icon%>"></i></span>
    <% end %>
  <% end %>
  <span class="subject">
    <strong><%= micropost.subject %></strong>
  </span>
  <span class="content">
    <%= micropost.content %>
  </span>
  <span>
    <div class="star-rating" data-score= <%= micropost.rating %> ></div>
  </span>

  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.

    <% if micropost.get_likes.size > 0 %>
      <i class="fa fa-check-square"></i> <%= pluralize(micropost.get_likes.size, "user") %> like this.
    <% end %>

    <%= link_to "Like", like_micropost_path(micropost), class: 'vote', method: :put %>


    <% if current_user?(micropost.user) %>
        <%= link_to "delete", micropost, method: :delete,
     													data: { confirm: "You sure?"} %>
    <% end %>
  </span>

  <script>
    $('.star-rating').raty({
        starOn: '<%= image_path('star-on.png') %>',
        starOff: '<%= image_path('star-off.png') %>',
        path: '',
        readOnly: true,

        score: function(){
            return $(this).attr('data-score');
        }
    });
  </script>
</li>



